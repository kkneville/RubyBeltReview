<!DOCTYPE html>
<html>
<head>
  <title>Rubybeltreview</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<p><% if current_user %>
	Logged in as <%= current_user.firstname %> |
	<a href="<%= user_path current_user.id  %>">Edit Profile</a> |
	<a href="<%= events_path current_user.id  %>">Events Dashboard</a> |
	<a href="<%= logout_path %>" data-method="delete">Logout</a>
	<% else %>
	<a href="<%= register_path %>">Register</a> |
	<a href="<%= login_path %>">Login</a>	
	<% end %> </p>

<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
	<p><%= error %> </p>
<% end %>	
<% end %>

<%= yield %>

</body>
</html>
